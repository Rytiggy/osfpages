<div class="info-layer-settings">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12">
                <form class="info">
                    <div class="checkbox">
                        <label class="checkbox">
                            {{input type="checkbox" name="info-checkbox" type="checkbox" checked=layer.settings.properties.showInNavigation}}
                            Add section to navigation
                        </label>
                    </div>
                    <div class="checkbox">
                        <label class="checkbox">
                            {{input type="checkbox" name="info-checkbox" type="checkbox" checked=layer.settings.properties.showFileviewer}}
                            Show file viewer
                        </label>
                     </div>
                    <div>
                        <h4> Select a file from OSF </h4>
                    </div>
                    <h5>File description</h5>
                    {{input class="form-control" value=layer.settings.description name="file-description" type="text"}}

                    <div class="m-v-md osf-box">
                        {{file-browser rootItem=node openFile=(action 'fileDetail') }}
                    </div>

                    <div class="m-v-md">
                        {{theme-select themes=themes layer=layer}}
                    </div>

                    <div class="m-v-md">
                        {{remove-layer index=index layers=layers}}
                    </div>
                    <div class="form-group">
                        <div>
                            <button class="btn btn-primary " name="save" {{action "saveForm"}}>
                                Save
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>