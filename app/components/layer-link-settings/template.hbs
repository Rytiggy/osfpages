{{yield}}
<div class="layer-link-settings">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12">
                <form>
                    <div class="form-group">
                        <label class="control-label " for="link-title">
                            Section Title
                        </label>
                        {{input class="form-control" value=layer.settings.properties.sectionTitle name="link-title" type="text"}}
                    </div>
                    <div class="form-group ">
                        <label class="control-label ">
                            Check all that apply
                        </label>
                        <div>
                            <div class="checkbox">
                                <label class="checkbox">
                                    {{input type="checkbox" name="link-checkbox" type="checkbox" checked=layer.settings.properties.showInNavigation}}
                                    Add section to navigation
                                </label>
                            </div>
                        </div>
                    </div>
                       <div class="form-group">
                        <label class="control-label " for="link-title">
                            Link Description
                        </label>
                        {{input class="form-control" value=layer.settings.properties.sectionLinkDescription name="link-title" type="text"}}
                         <label class="control-label " for="link-title">
                            Link to
                        </label>
                        {{input class="form-control" value=layer.settings.properties.sectionLink name="link-title" type="text"}}
                    </div>
                    <div class="form-group ">
                        <label class="control-label " for="link-theme-select">
                            Select a Theme
                        </label>
                        Current theme {{layer.settings.properties.themeId}}
                        {{#power-select
                            selected=layer.settings.properties.themeId
                            options=themes
                            onchange=(action (mut layer.settings.properties.themeId)) as |theme|}}
                          {{theme.name}}
                        {{/power-select}}
                    </div>

                    <div class="form-group">
                        <div>
                            <button class="btn btn-primary " name="save" {{action "saveForm"}}>
                                Save
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>