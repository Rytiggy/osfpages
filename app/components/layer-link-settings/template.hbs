{{yield}}
<div class="layer-link-settings">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12">
                <form>
                    <div class="form-group ">
                        <div>
                            <div class="checkbox">
                                <label class="checkbox">
                                    {{input type="checkbox" name="link-checkbox" type="checkbox" checked=layer.settings.values.showInNavigation}}
                                    Add section to navigation
                                </label>
                            </div>
                        </div>
                    </div>
                       <div class="form-group">
                         <label class="control-label " for="link-title">
                            Link to
                        </label>
                        {{input class="form-control" value=layer.settings.values.sectionLink name="link-title" type="text"  key-down="validateLink"}}
                    </div>
                    {{theme-select themes=themes layer=layer}}

                    {{remove-layer index=index layers=layers}}

                    <div class="form-group">
                        <div>
                            <button class="btn btn-primary " name="save" {{action "saveForm"}}>
                                Save
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>