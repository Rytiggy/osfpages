<div class="p-md">
    <div class="layer-settings-inner">
        <div class="layer-order">
            {{#if (gt index 0) }}
                <button class="btn btn-default btn-outline-default-cus" style="color:{{theme.color}};" {{action 'moveBefore' index}}> {{fa-icon 'angle-double-up'}} </button>
            {{else}}
                <button class="btn btn-default btn-outline-default-cus" style="color:{{theme.color}};"  disabled> {{fa-icon 'angle-double-up'}} </button>
            {{/if}}

            {{#if (lt index lastIndex)}}
                <button class="btn btn-default btn-outline-default-cus" style="color:{{theme.color}};" {{action 'moveAfter' index}}>{{fa-icon 'angle-double-down'}}</button>
            {{else}}
                <button class="btn btn-default btn-outline-default-cus" style="color:{{theme.color}};" disabled>{{fa-icon 'angle-double-down'}}</button>
            {{/if}}
        </div>
        {{theme-select themes=themes layer=layer}}
    </div>
</div>