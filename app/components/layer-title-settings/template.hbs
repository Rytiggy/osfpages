<div class="title-layer-settings ">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12">
                <form class="info">

                    <div class="form-group ">
                        <label class="control-label ">
                            Check all that apply
                        </label>
                        <div>
                            <div class="checkbox">
                                <label class="checkbox">
                                    {{input type="checkbox" name="info-checkbox" type="checkbox" checked=layer.settings.properties.showLinks}}
                                    Show navigation
                                </label>
                            </div>
                            <div class="checkbox">
                                <label class="checkbox">
                                    {{input type="checkbox" name="info-checkbox" type="checkbox" checked=layer.settings.properties.showTitle}}
                                    Show title
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group ">
                        <label class="control-label " for="info-theme-select">
                            Select a Theme
                        </label>
                        Current theme {{layer.settings.properties.themeId}}
                        {{#power-select
                            selected=layer.settings.properties.themeId
                            options=themes
                            onchange=(action (mut layer.settings.properties.themeId)) as |theme|}}
                            {{theme.name}}
                        {{/power-select}}
                    </div>

                    <div class="form-group">
                        <div>
                            <button class="btn btn-primary " name="save" {{action "saveForm"}}>
                                Save
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>