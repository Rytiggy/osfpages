<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="layer clearfix">
                <div class="layer-content">
                    <h2> {{layer.sectionHeader}}</h2>
                    Some contents here

                    {{component layer.component layer=layer}}

                    {{#unless editMode}}
                        <button class="btn btn-default" {{action toggleProperty 'showSettings'}}>Edit section</button>
                    {{/unless}}
                </div>
                {{#if showSettings}}
                    <div class="layer-settings">
                        <button type="button" class="close" aria-label="Close" {{action toggleProperty 'showSettings'}} ><span aria-hidden="true">&times;</span></button>
                        {{component layer.settings.component layer=layer themes=themes}}
                    </div>
                {{/if}}
            </div>

        </div>
    </div>
</div>
