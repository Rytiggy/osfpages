<div id="layer{{index}}" class="layer-wrapper {{layer.component}}" style="padding-left:150px; padding-right:150px; margin:0 auto;background-position: center; {{style}}">

    <div class="layer clearfix"> 

        {{#if editMode}}
            <div class="layer-settings">
                {{layer-settings layer=layer node=node editMode=editMode index=index layers=layers showSettings=showSettings}}
            </div>
        {{/if}}
        <div class="layer-content">
            {{component layer.component layer=layer node=node layers=layers editMode=editMode showSettings=showSettings}}
        </div>
    </div>
</div>