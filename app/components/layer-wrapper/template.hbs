<div class="layer-wrapper {{layer.component}} theme-{{theme.type}}" style="background-color:{{theme.background}}; color: {{theme.color}}" >
    <div class="container">
        <div class="row">
            {{#if editMode}} 
                {{#if showLayer}}
                    {{remove-layer index=index layers=layers}}
               {{/if}}
            {{/if}}
            <div class="col-xs-12">
                <div class="layer clearfix">
                    <div class="layer-content">
                        {{component layer.component layer=layer node=node layers=layers editMode=editMode}}
                        {{#if editMode}} 
                            <button class="btn btn-default" {{action toggleProperty 'showSettings'}}>Edit section</button>
                        {{/if}}
                    </div>
                    {{#if showSettings}}
                        {{#if editMode}} 

                        <div class="layer-settings">
                            <button type="button" class="close" aria-label="Close" {{action toggleProperty 'showSettings'}} ><span aria-hidden="true">&times;</span></button>
                            {{component layer.settings.component layer=layer themes=themes theme=theme node=node editMode=editMode}} 
                        </div>
                        {{/if}}
                    {{/if}}
                </div>
                {{#if editMode}} 
                <div class="layer-order">
                    {{#if (gt index 0) }}
                        <button class="btn btn-default" {{action 'moveBefore' index}}> {{fa-icon 'angle-double-up'}} </button>
                    {{else}}
                        <button class="btn btn-default" disabled> {{fa-icon 'angle-double-up'}} </button>
                    {{/if}}

                    {{#if (lt index lastIndex)}}
                        <button class="btn btn-default" {{action 'moveAfter' index}}>{{fa-icon 'angle-double-down'}}</button>
                    {{else}}
                        <button class="btn btn-default" disabled>{{fa-icon 'angle-double-down'}}</button>
                    {{/if}}
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>
