<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="layer clearfix">
                <div class="layer-content">
                    <h2> {{layer.sectionHeader}}</h2>
                    Some contents here

                    {{#unless editMode}}
                        <button class="btn btn-default" {{action toggleProperty 'showSettings'}}>Edit section</button>
                    {{/unless}}
                </div>
                {{#if showSettings}}
                    <div class="layer-settings">
                        These are the settings
                        <button class="btn btn-default" {{action toggleProperty 'showSettings'}}>Close</button>


                    </div>
                {{/if}}
            </div>

        </div>
    </div>
</div>
